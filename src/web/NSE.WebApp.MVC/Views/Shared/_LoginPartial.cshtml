@using NSE.WebApp.MVC.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
@if (AppUser.EstaAutenticado())
{
    <li class="nav-item">
        <a class="nav-link text-dark" title="Manage">Olá @AppUser.ObterUserEmail()</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Identidade" asp-action="Logout">Sair</a>
    </li>
}
else
{
    <!-- Guest Options -->
    <div class="text-end">
        <div class="mt-1">
            <a class="btn btn-outline-primary btn-sm me-2" asp-controller="Identidade" asp-action="Registro">Crie sua conta</a>
            <a class="btn btn-primary btn-sm" asp-controller="Identidade" asp-action="Login">Login</a>
        </div>
    </div>
}
</ul>
